<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DonorSearcher">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/UserZipcodeInput"
        android:layout_width="168dp"
        android:layout_height="56dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/UserSupplyInput"
        app:layout_constraintEnd_toStartOf="@+id/ZipCodeButton"
        app:layout_constraintHorizontal_bias="0.191"
        app:layout_constraintStart_toEndOf="@+id/UserZipcodeRequest"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.614">

        <android.support.design.widget.TextInputEditText
            android:layout_width="161dp"
            android:layout_height="37dp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/UserSupplyInput"
        android:layout_width="168dp"
        android:layout_height="50dp"
        android:layout_marginBottom="124dp"
        android:layout_marginEnd="84dp"
        android:layout_marginRight="84dp"
        app:layout_constraintBottom_toTopOf="@+id/UserCharityList"
        app:layout_constraintEnd_toStartOf="@+id/ZipCodeButton">

        <android.support.design.widget.TextInputEditText
            android:layout_width="161dp"
            android:layout_height="37dp" />
    </android.support.design.widget.TextInputLayout>


    <TextView
        android:id="@+id/UserZipcodeRequest"
        android:layout_width="88dp"
        android:layout_height="46dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="64dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="8dp"
        android:text="@string/AddressText"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/UserSuppliesRequest"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.571" />

    <Button
        android:id="@+id/ZipCodeButton"
        android:layout_width="73dp"
        android:layout_height="54dp"
        android:layout_marginEnd="96dp"

        android:layout_marginRight="96dp"
        android:layout_marginTop="84dp"
        android:text="@string/ZipCodeButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/UserSupplyButton"
        android:layout_width="73dp"
        android:layout_height="54dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="76dp"
        android:text="@string/ZipCodeButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toEndOf="@+id/UserSupplyInput"
        app:layout_constraintTop_toBottomOf="@+id/ZipCodeButton" />

    <TextView
        android:id="@+id/UserSuppliesRequest"
        android:layout_width="86dp"
        android:layout_height="46dp"
        android:layout_marginBottom="244dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="44dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="44dp"
        android:text="@string/SuppliesText"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/UserCharityList"
        app:layout_constraintEnd_toStartOf="@+id/UserSupplyInput"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent" />

    <ListView
        android:id="@+id/UserCharityList"
        style="@style/UserCharityList"
        android:layout_width="584dp"
        android:layout_height="334dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UserSupplyButton" />


</android.support.constraint.ConstraintLayout>